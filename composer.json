{
  "name": "yourname/rest-api",
  "description": "A simple REST API in PHP without any frameworks",
  "require": {
    "php": "^8.3",
    "guzzlehttp/psr7": "2.*",
    "guzzlehttp/guzzle": "8.0.x-dev",
    "psr/http-message": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  }
}